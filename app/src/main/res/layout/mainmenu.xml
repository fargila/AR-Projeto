<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/aqua"
        >

    <FrameLayout
        android:id="@+id/mainmenu_container_imagen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/mainmenu_imagen"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/fraguel_title"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mainmenu_container_btn_freemode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_freemode"
            android:layout_width="wrap_content"
            android:background="@drawable/popup_complete"
            android:text="@string/inicio_mapa"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:paddingLeft="0dip"
            android:paddingTop="5dip"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mainmenu_container_btn_routemode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_routemode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de rutas"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:background="@drawable/popup_complete"
            android:paddingLeft="0dip"
            android:paddingTop="5dip"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mainmenu_container_btn_interactivemode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_interactivemode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar caché"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:background="@drawable/popup_complete"
            android:paddingLeft="0dip"
            android:paddingTop="5dip"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mainmenu_container_btn_manager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva ruta"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:background="@drawable/popup_complete"
            android:paddingLeft="0dip"
            android:paddingTop="5dip"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>